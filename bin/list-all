#!/usr/bin/env bash

set -eo pipefail

cmd="curl --silent --location"
releases_path="https://pypi.org/pypi/dephell/json"
parse="python3 -c \"import sys, json; print('\n'.join(sorted(json.loads(sys.stdin.read())['releases'].keys())))\""

sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

versions=$(eval "$cmd $releases_path | $parse" | sort_versions | xargs)

echo "$versions"